<%  provide(:title,  "Edit  user")  %>
<h1>信息修改</h1>

<div  class="row">
    <div  class="col-ml-6  col-md-offset-3">
        <%=  form_for(@user)  do  |f|  %>
            <%=  render  'shared/error_messages',  object:  f.object  %>

            <%=  f.label  :姓名  %>
            <%=  f.text_field  :name,  class:  'form_control'  %>

             <%=  f.label  :邮箱  %>
            <%=  f.email_field  :email,  class:  'form_control'  %>

            <%=  f.label  :密码  %>
            <%=  f.password_field  :password,  class:  'form_control'   %>

            <%=  f.label  :确认密码,  "Confirmation"  %>
            <%=  f.password_field  :password_confirmation,  class:  'form_control'   %>

            <%=  f.submit  "保存更改",  class:  "btn  btn-primary"  %>
        <% end %>

        <div  class="gravatar_edit">
            <%=  gravatar_for  @user  %>
            <a href="http://gravatar.com/emails"  target="_blank"  >改变头像</a>

        </div>
    </div>

</div>
